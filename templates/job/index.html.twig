{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h4>All Jobs</h4>
    <h4>
        {% if user is defined %}
            {{ user.firstname }} {{ user.lastname }}
        {% endif %}
    </h4>

    <table class="table">
        <thead>
            <tr>
                <th>CompanyName</th>
                <th>JobPosition</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.companyName }}</td>
                <td>{{ job.jobPosition }}</td>
                <td>{{ job.startDate ? job.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.endDate ? job.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('app_job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_new') }}">Create new</a>
{% endblock %}
